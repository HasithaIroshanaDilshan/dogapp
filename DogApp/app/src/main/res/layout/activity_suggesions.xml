<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lk.ac.pdn.ce.dogapp.Suggesions"
    android:background="#d4383838"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Is this the same Dog ?"
        android:id="@+id/textView17"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="#fff6fffd" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:id="@+id/suggestedimage"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="no/id"
        android:id="@+id/id"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:textColor="#fffef9ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="date"
        android:id="@+id/datetxt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:textColor="#ff90fff3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="location"
        android:id="@+id/locationtxt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:textColor="#ff90fff3" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <Button
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:text="YES"
            android:background="@drawable/yesbtnstyle"
            android:id="@+id/yesbtn"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="fill_parent"
            android:text="May be"
            android:background="@drawable/hover"
            android:id="@+id/maybebtn"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.93" />

        <Button
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:text="NO"
            android:background="@drawable/nobtnstyle"
            android:id="@+id/nobtn"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

</LinearLayout>
