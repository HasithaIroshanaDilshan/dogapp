
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item
    android:state_focused="false"
    android:state_pressed="true">
    <shape android:shape="rectangle">
        <solid android:color="#ffb96a52"/>
        <corners android:radius="10dp" />
        <stroke
            android:width="2dp"
            android:color="#ffb96a52"
            />
    </shape>
</item>

<item>
    <shape android:shape="rectangle">
        <solid android:color="#ffff9371"/>
        <corners android:radius="10dp" />
        <stroke
            android:width="2dp"
            android:color="#ffff9371"
            />
    </shape>
</item>
</selector>