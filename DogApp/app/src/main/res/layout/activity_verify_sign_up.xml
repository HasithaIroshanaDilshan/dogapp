<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="lk.ac.pdn.ce.dogapp.VerifySignUp"
    android:background="#ff050505">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Verification Code"
        android:id="@+id/textView18"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="#ff90fff3"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="A verification code has been sent to your email. Check it and enter to verify."
        android:id="@+id/textView19"
        android:layout_below="@+id/textView18"
        android:textColor="@android:color/darker_gray"
        android:layout_alignStart="@+id/textView18"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/verifycode"
        android:background="@drawable/edittextstyle"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="20dp"
        android:textColor="#ff90fff3" />

    <Button
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:id="@+id/verifybtn"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/verifycode"
        android:background="@drawable/hover"
        android:layout_alignEnd="@+id/verifycode"
        android:layout_alignStart="@+id/verifycode"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
