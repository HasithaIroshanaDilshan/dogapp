<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#d4383838">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:weightSum="1"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="New Dog"
            android:id="@+id/textView6"
            android:textSize="35sp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="0.11"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView"
            android:layout_gravity="center|right"
            android:background="@drawable/dog"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location"
        android:id="@+id/textView7"
        android:layout_weight="0.03"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="@android:color/darker_gray" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.16"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="From GPS"
                android:id="@+id/textView12"
                android:textSize="20dp"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/gpsbtn"
                android:background="@drawable/hover"
                android:scaleType="fitCenter"
                android:src="@drawable/gps_btn_icon"
                android:layout_marginRight="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="From Map"
                android:id="@+id/textView11"
                android:textSize="20dp"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/mapbtn"
                android:background="@drawable/hover"
                android:scaleType="fitCenter"
                android:src="@drawable/map_btn_icon"
                android:layout_marginRight="5dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="*,*"
        android:id="@+id/location"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="#ff90fff3" />

    <Button
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next1btn"
        android:layout_gravity="right"
        android:layout_weight="0.08"
        android:layout_marginTop="30dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/nextbtnstyle"
        android:textStyle="bold"
        android:textSize="20dp" />



</LinearLayout>
