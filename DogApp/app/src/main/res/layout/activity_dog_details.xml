<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#d4383838">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Add Dog's Details"
        android:id="@+id/textView7"
        android:layout_weight="0.03"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="20dp" />


    <TextView
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What are it&apos;s Colors?"
        android:id="@+id/textView10"
        android:layout_marginLeft="16dp"
        android:textColor="#ff80acff"
        android:layout_weight="0.03"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.07">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="White"
            android:id="@+id/radioButton"
            android:layout_weight="0.03"
            android:checked="false"
            android:background="@android:color/white" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Brown"
            android:id="@+id/radioButton4"
            android:layout_weight="0.03"
            android:checked="false"
            android:background="#8b4513" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Gray"
            android:id="@+id/radioButton3"
            android:layout_weight="0.03"
            android:checked="false"
            android:background="@android:color/darker_gray" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Black"
            android:id="@+id/radioButton2"
            android:layout_weight="0.03"
            android:checked="false"
            android:background="@android:color/black"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="No of dogs in Photo"
            android:id="@+id/textView9"
            android:layout_marginLeft="16dp"
            android:textColor="#ff80acff"
            android:layout_gravity="center" />

        <Spinner
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner"
            android:spinnerMode="dropdown"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <Button
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next3btn"
        android:layout_gravity="right"
        android:layout_weight="0.04"
        android:layout_marginTop="30dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/nextbtnstyle"
        android:textStyle="bold"
        android:textSize="20dp" />

</LinearLayout>

